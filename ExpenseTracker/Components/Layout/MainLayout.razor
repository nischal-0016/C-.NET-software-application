@inherits LayoutComponentBase

<div class="page">
    @if (!IsLoginPage)
    {
        <div class="sidebar">
            <NavMenu />
        </div>
    }

    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    [Inject] private NavigationManager NavigationManager { get; set; }

    private bool IsLoginPage => NavigationManager.Uri.EndsWith("/");
}
