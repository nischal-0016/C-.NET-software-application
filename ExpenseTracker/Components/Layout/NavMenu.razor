<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">ExpenseTracker</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <!-- Home Link -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/home" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <!-- Dashboard Link -->
        @if (isLoggedIn)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/dashboard">
                    <span class="bi bi-speedometer2-nav-menu" aria-hidden="true"></span> Dashboard
                </NavLink>
            </div>

            <!-- Expenses Link -->
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/expenses">
                    <span class="bi bi-wallet2-nav-menu" aria-hidden="true"></span> Expenses
                </NavLink>
            </div>

            <!-- Debts Link -->
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/debts">
                    <span class="bi bi-exclamation-circle-nav-menu" aria-hidden="true"></span> Debts
                </NavLink>
            </div>
        }

        <!-- Login/Logout Link -->
        <div class="nav-item px-3">
            @if (isLoggedIn)
            {
                <button class="btn btn-link nav-link" @onclick="Logout">
                    <span class="bi bi-box-arrow-right-nav-menu" aria-hidden="true"></span> Logout
                </button>
            }
            else
            {
                <NavLink class="nav-link" href="/">
                    <span class="bi bi-box-arrow-in-right-nav-menu" aria-hidden="true"></span> Login
                </NavLink>
            }
        </div>
    </nav>
</div>

@code {
    private bool isLoggedIn = false;

    protected override void OnInitialized()
    {
        isLoggedIn = false;
    }

    private void Logout()
    {
        isLoggedIn = false;
        NavigationManager.NavigateTo("/login");
    }

    [Inject] private NavigationManager NavigationManager { get; set; }
}
